{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "moduleResolution": "Node",
      "target": "es2017",
      "outDir": ".build",
      "rootDir": "./",
      "baseUrl": "./",
      "esModuleInterop":true
    },
    "ts-node": {
      "esm": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  