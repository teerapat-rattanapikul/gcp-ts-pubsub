{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "target": "es2017",
      "outDir": ".build",
      "rootDir": "./",
      "baseUrl": "./"
    },
    "exclude": [
      "node_modules"
    ]
  }
  